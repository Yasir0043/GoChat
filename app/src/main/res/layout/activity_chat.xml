<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    tools:context=".activity.ChatActivity"
    android:background="@color/colorPrimary"
    >

    <RelativeLayout
        android:id="@+id/chat_header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >
        <include layout="@layout/app_bar_secondary"/>

        <ImageView
            android:id="@+id/chat_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/colorWhite" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_avatar"
            android:layout_toRightOf="@id/chat_back_btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:id="@+id/chat_user_lyt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/chat_profile_img"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/chat_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="18sp"

                />
            <TextView
                android:id="@+id/chat_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_user_name"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_header"
        android:background="@drawable/chat_background"
        android:layout_marginTop="10dp"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/bottom_Lyt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <RelativeLayout
            android:id="@+id/bottom_Lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/chat_btn"
            android:layout_marginBottom="10dp"
            >
            <EditText
                android:id="@+id/chat_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_box_style"
                android:layout_marginLeft="5dp"
                android:paddingStart="35dp"
                android:paddingTop="10dp"
                android:maxHeight="170dp"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:layout_marginRight="5dp"
                />
            <ImageButton
                android:id="@+id/emoji_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_emoji_emotions_24"
                android:background="@color/transparent"
                android:layout_alignStart="@id/chat_box"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                />
            <ImageButton
                android:id="@+id/attachment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_attach_file_24"
                android:background="@color/transparent"
                android:layout_alignEnd="@id/chat_box"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7dp"
                />
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/ic_baseline_mic_24"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</RelativeLayout>