<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserDetailsActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/colorAccent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_user"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_img"
                android:text="Name"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is email"
            android:textSize="16sp"
            android:textColor="@color/textSecondary"
            android:layout_alignParentStart="true"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_below="@id/user_email"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Phone Number"
            android:textSize="16sp"
            android:textColor="@color/textSecondary"
            android:layout_below="@id/phone"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_below="@id/user_phone"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/user_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is user Id"
            android:textSize="16sp"
            android:textColor="@color/textSecondary"
            android:layout_below="@id/uid"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</LinearLayout>